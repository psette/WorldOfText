public class Question {
	private int points_;
	private String category_, question_, answer_;
	private boolean asked_;

	public Question(int points, String category, String question, String answer) {
		points_ = points;
		category_ = category;
		question_ = question;
		answer_ = answer;
		asked_ = false;
	}

	public int getPoints() {
		return points_;
	}

	public String getCategory() {
		return category_;
	}

	public String getQuestion() {
		return question_;
	}

	public String getAnswer() {
		return answer_;
	}

	public boolean isAsked() {
		return asked_;
	}
	
	public void addToQuestion(String RestOfQuestion){
		question_ += RestOfQuestion;
	}
	
	public void addToAnswer(String RestOfAnswer){
		question_ += RestOfAnser;
	}
}
